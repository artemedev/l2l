<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1800" d:DesignHeight="1450"
             xmlns:vm="using:l2l_aggregator.ViewModels"
			 x:DataType="vm:AuthViewModel"
             x:Class="l2l_aggregator.Views.AuthView">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Grid Grid.Column="1">
			<Viewbox Stretch="Uniform">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="100"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="*"/>
						<RowDefinition Height="50"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>

					<Image Source="avares://l2l_aggregator/Assets/Images/Logo.png"
							Margin="0,0,0,10"
							Grid.Row="0" />

					<TextBlock Text="Авторизация"
								HorizontalAlignment="Center"
								FontSize="20"
							    FontWeight="Bold"
								Margin="0,0,0,10"
								Grid.Row="1" />

					<TextBox Text="{Binding Login, Mode=TwoWay}"
								HorizontalAlignment="Stretch"
								Watermark="Введите логин"
								Grid.Row="2"
								Grid.Column="1"
								Margin="0,10,0,10"/>

					<!--<TextBox Text="{Binding Password, Mode=TwoWay}"
								HorizontalAlignment="Stretch"
								Watermark="Введите пароль"
								Grid.Row="3"
								Grid.Column="1"
								PasswordChar="*"/>-->
					<TextBox Text="{Binding Password, Mode=TwoWay}"
							 HorizontalAlignment="Stretch"
							 Watermark="Введите пароль"
							 PasswordChar="*"
							 Grid.Row="3"
							 IsVisible="{Binding !IsPasswordVisible}"/>

					<TextBox Text="{Binding Password, Mode=TwoWay}"
							 HorizontalAlignment="Stretch"
							 Watermark="Введите пароль"
							 Grid.Row="3"
							 IsVisible="{Binding IsPasswordVisible}"/>
					<ToggleButton IsChecked="{Binding IsPasswordVisible}"
									  HorizontalAlignment="Right"
									  VerticalAlignment="Center"
									  Width="30"
								      Grid.Row="3"
									  Height="30"
									  Margin="0,0,0,0"
									  Background="Transparent"
									  BorderThickness="0"
									  Padding="0">
						<Grid>
							<materialIcons:MaterialIcon Kind="Eye"
														Width="20"
														Height="20"
														IsVisible="{Binding !IsPasswordVisible}"/>
							<materialIcons:MaterialIcon Kind="EyeOff"
														Width="20"
														Height="20"
														IsVisible="{Binding IsPasswordVisible}"/>
						</Grid>
					</ToggleButton>

					<Button Content="Войти"
							Command="{Binding LoginCommand}"
							HorizontalAlignment="Stretch"
							HorizontalContentAlignment="Center"
							VerticalContentAlignment="Center"
							Margin="0,20,0,20"
							Height="50"
							Grid.Row="4"
							Grid.Column="1"/>

				</Grid>
			</Viewbox>
		</Grid>
	</Grid>
</UserControl>